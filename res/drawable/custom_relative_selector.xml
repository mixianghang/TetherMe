<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
 	<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <gradient android:startColor="#82CAFA"
            android:centerColor="#82CAFA" android:endColor="#82CAFA"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="#C0C0C0" />
        <corners android:radius="0dp" />
        <padding android:left="5dp" android:top="5dp" android:right="5dp"
            android:bottom="5dp" />
    </shape>
	</item>
	
    <item android:state_focused="true">
    <shape android:shape="rectangle">
        <gradient android:startColor="#82CAFA"
            android:centerColor="#82CAFA" android:endColor="#82CAFA"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="#C0C0C0" />
        <corners android:radius="0dp" />
        <padding android:left="5dp" android:top="5dp" android:right="5dp"
            android:bottom="5dp" />
    </shape>
	</item>
	
    <item>
    <shape android:shape="rectangle">
        <gradient android:startColor="#F0F0F0"
            android:centerColor="#F4F4F4" android:endColor="#F3F3F3"
            android:angle="270" android:centerX="0.5" android:centerY="0.5" />
        <stroke android:width="1dp" android:color="#C0C0C0" />
        <corners android:radius="0dp" />
        <padding android:left="5dp" android:top="5dp" android:right="5dp"
            android:bottom="5dp" />
    </shape>
	</item>

</selector>